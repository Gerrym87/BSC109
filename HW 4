        "# Gerlando M Marchetta\n",
        "# HW 4 BSC109\n",
        "\n",
        "# A softaware company sells a package that retails for $99. Quantity discounts\n",
        "# are given according to the following table:\n",
        "#     Quantity          Discount\n",
        "#     10 - 19           10%\n",
        "#     20 - 49           20%\n",
        "#     50 - 99           30%\n",
        "#     100 - +           40%\n",
        "\n",
        "def main():\n",
        "  quantity = int(input('Enter the amount of packages purchased'))\n",
        "  reg = 99.00\n",
        "\n",
        "  if quantity <= 9:\n",
        "    full_price = quantity * reg\n",
        "    print('no discount')\n",
        "    print('net price =', full_price)\n",
        "  elif quantity <= 19 and quantity >= 10:\n",
        "    discount = .1\n",
        "    full_price = quantity * reg\n",
        "    total_amount = quantity * reg * discount\n",
        "    net_price = full_price - total_amount\n",
        "    print('you receive a 10% discount.')\n",
        "    print('regular price is', full_price)\n",
        "    print('total amount discounted', total_amount)\n",
        "    print('net price is', net_price)\n",
        "  elif quantity <= 49 and quantity >= 20:\n",
        "    discount = .2\n",
        "    full_price = quantity * reg\n",
        "    total_amount = quantity * reg * discount\n",
        "    net_price = full_price - total_amount\n",
        "    print('you receive a 20% discount.')\n",
        "    print('regular price is', full_price)\n",
        "    print('total amount discounted', total_amount)\n",
        "    print('net price is', net_price)\n",
        "  elif quantity <= 99 and quantity >= 50:\n",
        "    discount = .3\n",
        "    full_price = quantity * reg\n",
        "    total_amount = quantity * reg * discount\n",
        "    net_price = full_price - total_amount\n",
        "    print('you receive a 30% discount.')\n",
        "    print('regular price is', full_price)\n",
        "    print('total amount discounted', total_amount)\n",
        "    print('net price is', net_price)\n",
        "  else:\n",
        "    discount = .4\n",
        "    full_price = quantity * reg\n",
        "    total_amount = quantity * reg * discount\n",
        "    net_price = full_price - total_amount\n",
        "    print('you receive a 40% discount.')\n",
        "    print('regular price is', full_price)\n",
        "    print('total amount discounted', total_amount)\n",
        "    print('net price is', net_price)\n",
        "\n",
        "main()\n",
